---
import Layout from "../layouts/Layout.astro";
import { Button } from "@/components/ui/button";
import { FileText } from "lucide-astro";
---

<Layout title="Julius Computer">
  <main class="p-12 flex flex-col min-h-screen gap-4">
    <div
      class="w-full bg-neutral-900 p-4 rounded-md flex justify-between items-center"
    >
      <h1 class="font-semibold text-xl">http://vdcon-ap040</h1>
      <div class="flex gap-2 items-center">
        <img
          src="https://lh3.googleusercontent.com/ogw/AKPQZvw9X18rGI39iQUBntMs9x_ijE04EKg2zDxb7i5eMA=s32-c-mo"
          alt="Julius Zlioba"
          class="rounded-full"
        />
        <p class="font-semibold">Julius Computer</p>
      </div>
    </div>
    <div class="space-y-4 grow flex items-center justify-center">
      <a href="http://vdcon-ap040:3001" target="_blank">
        <Button className="flex gap-2 items-center">
          Hausbrot Gourmet Lieferschein <FileText size={20} strokeWidth={1.5} />
        </Button>
      </a>
    </div>
  </main>
</Layout>
